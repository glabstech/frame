{
  "name": "profacc",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "yarn compile && yarn watch",
    "compile": "vendor-copy && yarn copy && yarn minify && yarn sass-compile && yarn ts-compile",
    "ts-compile": "tsc",
    "sass-compile": "node-sass -r --include-path src src/app.scss assets/css/app.css --output-style compressed --error-bell",
    "build": "yarn compile && yarn minify",
    "minify": "node build-frame/frame-minify.js",
    "sass-watch": "node-sass -w -r --include-path src src/app.scss assets/css/app.css --output-style compressed --error-bell",
    "ts-watch": "tsc --watch",
    "watch": "npm-run-all --parallel sass-watch ts-watch --print-label",
    "sync": "browser-sync 'http://profacc.local' '' -w",
    "copy": "node build-frame/frame-copy.js"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "copy-dir": "^1.2.0",
    "node-minify": "^3.1.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.3",
    "typescript-starter": "^1.2.1",
    "vendor-copy": "^2.0.0"
  },
  "dependencies": {
    "aos": "^2.3.2",
    "bootstrap": "^4.1.1",
    "jquery": "^3.3.1",
    "@fortawesome/fontawesome-free": "^5.11.2",
    "slick-carousel": "^1.8.1"
  },
  "private": true,
  "vendorCopy": [
    {
      "from": "node_modules/@fortawesome/fontawesome-free/css/all.min.css",
      "to": "lib/fontawesome/css/all.min.css"
    },
    {
      "from": "node_modules/aos/dist/aos.css",
      "to": "lib/aos/aos.css"
    },
    {
      "from": "node_modules/aos/dist/aos.js",
      "to": "lib/aos/aos.js"
    },
    {
      "from": "node_modules/bootstrap/dist/js/bootstrap.min.js",
      "to": "lib/bootstrap/bootstrap.min.js"
    },
    {
      "from": "node_modules/bootstrap/dist/css/bootstrap.min.css",
      "to": "lib/bootstrap/bootstrap.min.css"
    },
    {
      "from": "node_modules/slick-carousel/slick/ajax-loader.gif",
      "to": "assets/css/ajax-loader.gif"
    },
    {
      "from": "node_modules/slick-carousel/slick/slick.min.js",
      "to": "lib/slick-carousel/slick.min.js"
    },
    {
      "from": "node_modules/slick-carousel/slick/slick.css",
      "to": "lib/slick-carousel/slick.css"
    },
    {
      "from": "node_modules/slick-carousel/slick/slick-theme.css",
      "to": "lib/slick-carousel/slick-theme.css"
    }
  ]
}
