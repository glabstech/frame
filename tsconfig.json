{

"compilerOptions": {
    "outFile": "assets/js/app.js",
    "rootDir": "assets/js",

    "declaration": false,
    "removeComments": false,
    "lib": [
        "es5",
        "dom"
    ],
    "target": "es5",
    "importHelpers": false,
    "inlineSourceMap": true,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    "baseUrl": ".", // required for "paths"
    "paths": {
        "seaside-hue-resort": ["assets/js/app.js"] // write tests without relative paths
    }
},
"include": [
    "src/app.ts",
    "src/**/*.ts"
]
}